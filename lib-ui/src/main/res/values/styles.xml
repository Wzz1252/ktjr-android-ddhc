<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="App.Base.Day.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_color_t_primary</item>
        <item name="colorPrimaryDark">@color/app_color_t_primary_dark</item>
        <item name="colorAccent">@color/app_color_t_accent</item>
        <item name="android:windowBackground">@color/app_color_t_bg_default</item>
    </style>

    <style name="Navigation.Day.Theme" parent="App.Base.Day.Theme">
        <item name="colorPrimary">@color/app_color_menu_text</item>
        <item name="colorPrimaryDark">@color/app_color_menu_text</item>
    </style>

    <style name="AppTheme.Light.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/app_color_t_text_title</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <!-- 设置该属性解决空白部分-->
        <!--<item name="contentInsetStart">0dp</item>-->
        <!--<item name="contentInsetStartWithNavigation">0dp</item>-->
    </style>

    <style name="AppTheme.Toolbar.TextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_color_t_text_default</item>
        <item name="android:textColorSecondary">@color/app_color_t_text_default</item>
    </style>

</resources>