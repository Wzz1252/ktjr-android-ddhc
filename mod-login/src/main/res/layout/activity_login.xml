<?xml version="1.0" encoding="utf-8"?>
<com.torment.lib.ui.widget.appview.AppLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <com.torment.lib.ui.widget.appview.AppLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <com.torment.lib.ui.widget.appview.AppImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_logo" />

        <com.torment.lib.ui.widget.StandardEditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:hint="请输入用户名"
            app:is_clean="true"
            app:left_icon="@drawable/view_title_label"
            app:right_icon="@drawable/view_title_label" />

        <com.torment.lib.ui.widget.StandardEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:hint="请输入密码"
            app:is_clean="true"
            app:left_icon="@drawable/view_title_label"
            app:right_icon="@drawable/view_title_label" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            android:gravity="right"
            android:paddingLeft="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textColor="@color/app_color_t_text_default" />
        </LinearLayout>

        <com.torment.lib.ui.widget.appview.AppButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/btn_login_bg_login_ripple"
            android:text="登录"
            android:textColor="@color/color_ffffff" />
    </com.torment.lib.ui.widget.appview.AppLinearLayout>

</com.torment.lib.ui.widget.appview.AppLinearLayout>